    section#contact-page
      .container
        .center
          h2 Drop Your Message
          p.lead Write your details and message here
        .row.contact-wrap
          .status.alert.alert-success(style='display: none')
          form#main-contact-form.contact-form(name='contact-form', method='post', action='/contact/sendmessage')
            .col-sm-5.col-sm-offset-1
              .form-group
                label Name *
                input#name.form-control(type='text', name='name', required='required')
              .form-group
                label Email *
                input#email.form-control(type='email', name='email', required='required')
              .form-group
                label Phone
                input#phone.form-control(type='number')
              .form-group
                label Company Name
                input#company.form-control(type='text')
            .col-sm-5
              .form-group
                label Subject *
                input#subject.form-control(type='text', name='subject', required='required')
              .form-group
                label Message *
                textarea#message.form-control(name='message', required='required', rows='8')
              .form-group
                button.btn.btn-primary.btn-lg(type='submit', name='submit', required='required') Submit Message
