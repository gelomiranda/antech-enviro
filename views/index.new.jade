extends layout

block content
    // /header
    section.no-margin
      #carousel-example-generic.carousel.slide(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
          each slider in sliders
           li(data-target='#carousel-example-generic', data-slide-to='#{sliders.indexOf(slider)}',class="#{sliders.indexOf(slider) == 0 ?'active':''}")
          
        // Wrapper for slides
        .carousel-inner(role='listbox')
           each slider in sliders
              .item(class="#{sliders.indexOf(slider) == 0 ?'active':''}")
                  img(src='/data/#{slider.image}')
                  .carousel-caption
                    h1.slider-title=slider.title
                    p.slider-description=slider.description


          a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
            span.sr-only Previous
          a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
            span.sr-only Next
    
      
    section#services.service-item
      .container
        .center.wow.fadeInDown
          h2 Products and Services
          p.lead
            | You can select variety of products from our principals below 
        .row
          each principal in session.principals
            .col-sm-6.col-md-4
              .thumbnail
                a.truncate-me-1(href='/products/update?selPrincipalId=#{principal.id}&catId=#{principal.Categories[0]!=undefined?principal.Categories[0].id:""}')
                  img(src='/data/#{principal.logo}', alt='')
                //.caption
                //  h4
                //    a.truncate-me-1(href='/viewproduct?prodId=#{principal.id}')= principal.name
        // /.row
      // /.container
    // /#services
    section#conatcat-info
      .container
        .row
          .col-sm-8
            .media.contact-info.wow.fadeInDown(data-wow-duration='1000ms', data-wow-delay='600ms')
              .pull-left
                i.fa.fa-phone
              .media-body
                h2 Have a question or need a price quote?
                p
                  | Feel free to navigate
                  a(href='/contact') &nbsp; contacts
                  | &nbsp; page.
      // /.container
    // /#conatcat-info
    include ./includes/bottom.jade